<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nkbh.xuexue">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.nkbh.xuexue.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Immersive" />
        <activity android:name=".activity.PostArticleActivity" />
        <activity
            android:name=".activity.CourseDetailActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity android:name=".activity.HomeworkDetailActivity" />
        <activity android:name=".activity.AddPlanActivity" />
        <activity android:name=".activity.CommunityDetailActivity" />
        <activity android:name=".activity.PostReplyActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
</manifest>